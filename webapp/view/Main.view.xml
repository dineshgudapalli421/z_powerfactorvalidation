<mvc:View controllerName="com.sap.lh.mr.zpowerfactorvalidation.controller.Main"
   xmlns:vh="sap.ui.mdc.filterbar.vh" xmlns:smartfield="sap.ui.comp.smartfield"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:f="sap.f" 
    xmlns:mdc="sap.ui.mdc"
    xmlns:core="sap.ui.core" xmlns:fb="sap.ui.comp.filterbar">
    <f:DynamicPage id="dynamicPageId"
			stickySubheaderProvider="iconTabBar"
			class="sapUiNoContentPadding"
			toggleHeaderOnTitleClick="{/titleClickable}">
            <f:header>
            <f:DynamicPageHeader
       
    >
        <f:content>
            <fb:FilterBar
                id="filterbar"
                persistencyKey="myPersKey"
                useToolbar="false"
                search=".onSearch"
                filterChange=".onFilterChange"
                afterVariantLoad=".onAfterVariantLoad"
                filterContainerWidth="13rem"
                header="inLog" showClearOnFB="false"
                class="sapUiSmallMarginBottom"
            >
              <fb:filterGroupItems>                                            
                                <fb:FilterGroupItem name="Equipment" 
								label="Equipment" 
								groupName="Group1" 
								visibleInFilterBar="true" mandatory="false">
                                    <fb:control>
                                        <Input
                                         id="idEquipment" 
										 width="90%"  
										 showValueHelp="false"
										 value="{filters>/idEquipment}"
                                        >
                                        </Input>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem name="DeviceLocation"
								label="Device Location" 
								groupName="Group1" 
								visibleInFilterBar="true" mandatory="false">
                                    <fb:control>                                        
                                        <MultiInput id="idDevLocation"
            valueHelpIconSrc="sap-icon://value-help" value="{filters>/idDevLocation}"
            width="60%" 
            valueHelpRequest="onSingleConditionVHRequested"/>
                                        
                                    </fb:control>
                                </fb:FilterGroupItem>   
									<fb:FilterGroupItem 
										name="periodFrom" 
										label="Period From" 
										groupName="Group1" 
										visibleInFilterBar="true" mandatory="true">
											<fb:control>											
                                           <DatePicker
                    id="idDTP1" width="100%"
                    placeholder="Enter Date"/>                                                                                    
											</fb:control>
										</fb:FilterGroupItem>
										 <!-- Profile Ratio -->
										<fb:FilterGroupItem
											name="periodTo"
											label="Period To"
											groupName="Group1"
											visibleInFilterBar="true" mandatory="true">
											<fb:control>
												<DatePicker
                    id="idDTP2" width="100%"
                    placeholder="Enter Date"/>
											</fb:control>
										</fb:FilterGroupItem>
										 									
                               
                            </fb:filterGroupItems>
						
            </fb:FilterBar>
        </f:content>
		
    </f:DynamicPageHeader>
            </f:header>
            <f:content>
        <core:Fragment
                fragmentName="com.sap.lh.mr.zpowerfactorvalidation.fragment.items"  
                type="XML"
            />
     </f:content>
    </f:DynamicPage>
    
</mvc:View>